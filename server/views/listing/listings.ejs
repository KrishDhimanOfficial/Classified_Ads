<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dashboard</title>
    <%- include('../partials/header') %>
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Preloader -->
        <%- include('../partials/Loader') %>

            <!-- Navbar -->
            <%- include('../partials/navbar') %>
                <!-- /.navbar -->

                <!-- Main Sidebar Container -->
                <%- include('../partials/sidebar') %>

                    <!-- Content Wrapper. Contains page content -->
                    <div class="content-wrapper">
                        <section class="content-header">
                            <div class="container-fluid">
                                <div class="row mb-2">
                                    <div class="col-md-6">
                                        <h1 class="mb-2">Listings</h1>
                                        <ol class="breadcrumb float-sm-left">
                                            <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
                                            <li class="breadcrumb-item active">All Listing</li>
                                        </ol>
                                    </div>
                                </div>
                                <!-- /.row -->
                            </div>
                            <!-- /.container-fluid -->
                        </section>

                        <section class="content">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="card">
                                            <div class="card-body">
                                                <table style="overflow-x: scroll;" id="datatable"
                                                    class="table table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>S.no</th>
                                                            <th>Image</th>
                                                            <th>Title</th>
                                                            <th>Category</th>
                                                            <th>Price</th>
                                                            <th>User</th>
                                                            <th>Listed Date</th>
                                                            <th>Publishing Status</th>
                                                            <th>Current Status</th>
                                                            <th>Actions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="table-grid">
                                                        <% response?.forEach((listing,i)=> { %>
                                                            <tr>
                                                                <td>
                                                                    <span>
                                                                        <%= i+1 %>
                                                                    </span>
                                                                </td>
                                                                <td>
                                                                    <img src="<%= listing.img_path %>" alt=""
                                                                        style="width: 80px; height: 80px; object-fit: cover;"
                                                                        loading="lazy">
                                                                </td>
                                                                <td>
                                                                    <%= listing.title %>
                                                                </td>
                                                                <td>
                                                                    <%= listing.parentcategory.title %>
                                                                </td>
                                                                <td>
                                                                    <%= listing.price %>
                                                                </td>
                                                                <td>
                                                                    <%= listing.sellerInfo.username %>
                                                                </td>
                                                                <td>
                                                                    <%= listing.createdAt %>
                                                                </td>
                                                                <td>
                                                                    <label class="switch">
                                                                        <input type="checkbox" class="status"
                                                                            data-id="<%= listing._id %>"
                                                                            <%=listing.publishing_status ? "checked"
                                                                            : "" %>>
                                                                        <span class="slider"></span>
                                                                    </label>
                                                                </td>
                                                                <td>
                                                                    <div class="alert p-1 text-center <%=listing.status ? "alert-success" : "alert-dark" %>" role="alert">
                                                                        <%=listing.status ? "Active" : "InActive" %>
                                                                      </div>
                                                                </td>
                                                                <td>
                                                                    <div class="d-flex gap-3">
                                                                        <a href="#" class="btn btn-primary">
                                                                            <i class="fa-solid fa-pen-to-square"></i>
                                                                            view
                                                                        </a>
                                                                        <button type="button" data-id="<%=0 %>"
                                                                            data-toggle="modal"
                                                                            data-target="#modal-danger"
                                                                            class="btn btn-danger openModal">
                                                                            <i class="fa-solid fa-trash-can"></i>
                                                                            Delete
                                                                        </button>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <!-- /.content-wrapper -->
                    <footer class="main-footer">
                        <strong>Copyright &copy; 2014-2021</strong>
                        All rights reserved.
                    </footer>

    </div>
    <!-- ./wrapper -->
    <%- include('../partials/danger-modal') %>
        <%- include('../partials/script') %>
            <%- include('../partials/datatables.script.ejs') %>
                <script> const EndAPI = 'listing';</script>
                <script async type="module" src="/assets/js/datatable.js"></script>
</body>

</html>