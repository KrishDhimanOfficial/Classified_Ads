<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dashboard</title>
    <%- include('../partials/header') %>
        <link rel="stylesheet" href="/assets/vendor/datatables-responsive/css/responsive.bootstrap4.min.css">
        <link rel="stylesheet" href="/assets/vendor/datatables-bs4/css/dataTables.bootstrap4.min.css">
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Preloader -->
        <%- include('../partials/Loader') %>

            <!-- Navbar -->
            <%- include('../partials/navbar') %>
                <!-- /.navbar -->

                <!-- Main Sidebar Container -->
                <%- include('../partials/sidebar') %>

                    <!-- Content Wrapper. Contains page content -->
                    <div class="content-wrapper">
                        <section class="content-header">
                            <div class="container-fluid">
                                <div class="row mb-2">
                                    <div class="col-md-6">
                                        <h1 class="mb-2">Brands</h1>
                                        <ol class="breadcrumb float-sm-left">
                                            <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
                                            <li class="breadcrumb-item active">Brands</li>
                                        </ol>
                                    </div>
                                    <div class="col-md-6 align-content-center">
                                        <a href="/admin/product/add-new-brand" class="btn btn-primary float-right">
                                            ADD New
                                        </a>
                                    </div>
                                </div>
                                <!-- /.row -->
                            </div>
                            <!-- /.container-fluid -->
                        </section>

                        <section class="content">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="card">
                                            <div class="card-body">
                                                <table id="datatable" class="table table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>S.no</th>
                                                            <th>Brand</th>
                                                            <th>Status</th>
                                                            <th>Actions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="table-grid">
                                                        <% brands?.forEach((brand,i)=> { %>
                                                            <tr class="table-row">
                                                                <td>
                                                                    <%= i+1 %>
                                                                </td>
                                                                <td>
                                                                    <%= brand.title %>
                                                                </td>
                                                                <td>
                                                                    <%= brand.status ? "Active" : "Inactive" %>
                                                                </td>
                                                                <td>
                                                                    <a href="/admin/product/brand/<%= brand._id %>"
                                                                        class="btn btn-primary">
                                                                        <i class="fa-solid fa-pen-to-square"></i>
                                                                        update
                                                                    </a>
                                                                    <button type="button" data-id="<%= brand._id %>"
                                                                        data-toggle="modal" data-target="#modal-danger"
                                                                        class="btn btn-danger openModal">
                                                                        <i class="fa-solid fa-trash-can"></i>
                                                                        Delete
                                                                    </button>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <!-- /.content-wrapper -->
                    <footer class="main-footer">
                        <strong>Copyright &copy; 2014-2021</strong>
                        All rights reserved.
                    </footer>

    </div>
    <!-- ./wrapper -->
    <%- include('../partials/danger-modal') %>
        <%- include('../partials/script') %>
            <%- include('../partials/datatables.script.ejs') %>
                <script> const EndAPI = 'product/brand';</script>
                <script async type="module" src="/assets/js/datatable.js"></script>
</body>

</html>